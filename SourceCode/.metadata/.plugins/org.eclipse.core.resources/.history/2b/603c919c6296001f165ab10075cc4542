#include "main.h"
#include "Ex3.h"

int index = 0;

void updateClockBuffer() {
	HAL_GPIO_TogglePin(DOT_GPIO_Port, DOT_Pin);
	led_buffer[0] = hour / 10;
	led_buffer[1] = hour % 10;
	led_buffer[2] = minute / 10;
	led_buffer[3] = minute % 10;
	update7SEG(index);
	index++;
	if (index > 3) {
		index = 0;
	}
}
